// File: contracts/EtherDistributerMRM.sol

contract EtherDistributer is Pausable {
    using SafeMath for uint;

    address payable blockbaseAddress;
    address payable recipientAddress;
    uint blockbaseCut = 500;
    uint denominator = 650;

    constructor (address payable _blockbaseAddress, address payable _recipientAddress) public {
        blockbaseAddress = _blockbaseAddress;
        recipientAddress = _recipientAddress;
    }

    function () external payable whenNotPaused {
        uint actualBlockbaseCut = _computeBlockBaseCut(msg.value);
        uint actualRecipientCut = msg.value - actualBlockbaseCut;
        blockbaseAddress.transfer(actualBlockbaseCut);
        recipientAddress.transfer(actualRecipientCut);
    }

    function updateBlockBaseAddress(address payable _blockbaseAddress) public onlyPauser {
        blockbaseAddress = _blockbaseAddress;
    }

    function updateRecipientAddress(address payable _recipientAddress) public onlyPauser {
        recipientAddress = _recipientAddress;
    }

    function updateBlockbaseCut(uint _blockbaseCut) public onlyPauser {
        blockbaseCut = _blockbaseCut;
    }

    function updateDenominator(uint _denominator) public onlyPauser {
        denominator = _denominator;
    }

    function _computeBlockBaseCut(uint _price) internal view returns (uint) {
        return _price * blockbaseCut / denominator;
    }
}
